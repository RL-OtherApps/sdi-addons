<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="stock_picking_recalculation" model="ir.cron">
            <field name="name">Recalculation of report picking valued</field>
            <field name="active" eval="False"/>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">
valores=model.search([('state','=','done'),('picking_type_id','=',1),('amount_total','=',0),('sale_id','>',0)])
for item in valores:
  item.valued_calculation()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
